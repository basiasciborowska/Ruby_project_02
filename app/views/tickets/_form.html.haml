= form_for ([@project, @project.tickets.build]) do |f|
  - if @ticket.errors.any?
    #error_explanation
      %h2
        = pluralize(@ticket.errors.count, "error")
        prohibited
        this ticket from being saved:
      %ul
        - @ticket.errors.full_messages.each do |msg|
          %li= msg

  = form_for :ticket, url: project_tickets_path do |f|

    %p
      = f.label :title
      %br/
      = f.text_field :title
    %p
      = f.label :description
      %br/
      = f.text_area :description
    %p
      = f.label :priority
      %br/
      = f.text_field :priority
    %p
      = f.label :difficulty
      %br/
      = f.text_field :difficulty
    %p
      = f.label :status
      %br/
      = f.text_field :status
    %p
      = f.submit